{
  "sections": [
    {
      "component": "Confirmation",
      "props": {
        "title": "Thank You!",
        "message": "Your order has been placed successfully.",
        "userInfo": {
          "firstName": "{{state.checkout-form.firstName}}",
          "lastName": "{{state.checkout-form.lastName}}",
          "email": "{{state.checkout-form.email}}"
        },
        "orderItems": "{{state.cart.items}}",
        "orderTotal": "{{state.cart.totalPrice}}",
        "button": {
          "label": "Continue Shopping",
          "onClick": {
            "type": "chain",
            "actions": [
              {
                "type": "setState",
                "key": "cart",
                "value": {
                  "items": [],
                  "itemCount": 0,
                  "totalPrice": 0.00
                }
              },
              {
                "type": "setState",
                "key": "checkout-form",
                "value": {}
              },
              {
                "type": "navigate",
                "url": "home"
              }
            ]
          }
        }
      }
    }
  ]
}
