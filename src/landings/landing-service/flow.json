{
  "name": "Landing Page Service Flow",
  "description": "Conversion flow for landing page creation service with upsells",
  "steps": [
    {
      "id": "hero",
      "name": "Hero Section",
      "description": "Main value proposition and call-to-action",
      "path": "/hero",
      "layout": {
        "desktop": "steps/hero/desktop.json",
        "mobile": "steps/hero/mobile.json"
      }
    },
    {
      "id": "service-popup",
      "name": "Service Selection Popup",
      "description": "Choose service package in a popup",
      "path": "/service-popup",
      "type": "popup",
      "layout": {
        "desktop": "steps/service-popup/desktop.json",
        "mobile": "steps/service-popup/mobile.json"
      }
    },
    {
      "id": "upsell-popup",
      "name": "Upsell Offer Popup",
      "description": "Offer additional services as upsell",
      "path": "/upsell-popup",
      "type": "popup",
      "layout": {
        "desktop": "steps/upsell-popup/desktop.json",
        "mobile": "steps/upsell-popup/mobile.json"
      }
    },
    {
      "id": "checkout-popup",
      "name": "Checkout Popup",
      "description": "Final checkout process in popup",
      "path": "/checkout-popup",
      "type": "popup",
      "layout": {
        "desktop": "steps/checkout-popup/desktop.json",
        "mobile": "steps/checkout-popup/mobile.json"
      }
    },
    {
      "id": "order",
      "name": "Full Checkout Page",
      "description": "Complete checkout and payment on full page",
      "path": "/order",
      "layout": {
        "desktop": "steps/order/desktop.json",
        "mobile": "steps/order/mobile.json"
      }
    },
    {
      "id": "success",
      "name": "Confirmation",
      "description": "Order confirmation and next steps",
      "path": "/success",
      "layout": {
        "desktop": "steps/success/desktop.json",
        "mobile": "steps/success/mobile.json"
      }
    }
  ],
  "defaultStep": "hero",
  "analytics": {
    "trackPageViews": true,
    "trackConversions": true,
    "conversionEvents": ["service_selected", "upsell_accepted", "order_submitted", "contact_form_filled"]
  }
}