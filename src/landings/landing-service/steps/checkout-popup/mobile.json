{
  "layout": "popup",
  "sections": [
    {
      "component": "Popup",
      "props": {
        "title": "Complete Your Order",
        "subtitle": "One step to amazing results!",
        "size": "fullscreen",
        "showCloseButton": false,
        "sections": [
          {
            "component": "OrderSummary",
            "props": {
              "title": "Order Summary",
              "showSelectedPlan": true,
              "showUpsells": true
            }
          },
          {
            "component": "ContactForm",
            "props": {
              "title": "Your Information",
              "fields": [
                {
                  "name": "name",
                  "label": "Full Name",
                  "type": "text",
                  "required": true,
                  "placeholder": "Your full name"
                },
                {
                  "name": "email",
                  "label": "Email Address",
                  "type": "email",
                  "required": true,
                  "placeholder": "your@email.com"
                },
                {
                  "name": "phone",
                  "label": "Phone Number",
                  "type": "tel",
                  "required": false,
                  "placeholder": "+1 (555) 123-4567"
                },
                {
                  "name": "company",
                  "label": "Company Name",
                  "type": "text",
                  "required": false,
                  "placeholder": "Your company"
                },
                {
                  "name": "website",
                  "label": "Website URL",
                  "type": "url",
                  "required": false,
                  "placeholder": "https://yourwebsite.com"
                },
                {
                  "name": "project_details",
                  "label": "Project Details",
                  "type": "textarea",
                  "required": true,
                  "placeholder": "Tell us about your project..."
                }
              ],
              "submitText": "Complete Order",
              "submitAction": "complete_order"
            },
            "actions": {
              "complete_order": {
                "type": "chain",
                "actions": [
                  {
                    "type": "analytics",
                    "event": "purchase_completed",
                    "properties": {
                      "plan": "{{selectedPlan.name}}",
                      "value": "{{selectedPlan.price}}"
                    }
                  },
                  {
                    "type": "navigate",
                    "url": "/order"
                  }
                ]
              }
            }
          }
        ]
      }
    }
  ]
}