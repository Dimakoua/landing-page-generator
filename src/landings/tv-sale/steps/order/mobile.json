{
  "sections": [
    {
      "component": "Hero",
      "props": {
        "title": "Complete Your Purchase",
        "subtitle": "Secure checkout for your new TV"
      }
    },
    {
      "component": "ContactForm",
      "props": {
        "title": "Order Details",
        "fields": [
          { "name": "name", "label": "Full Name", "type": "text", "required": true },
          { "name": "email", "label": "Email", "type": "email", "required": true },
          { "name": "phone", "label": "Phone", "type": "tel", "required": true },
          { "name": "address", "label": "Shipping Address", "type": "textarea", "required": true }
        ],
        "submitText": "Place Order",
        "submitAction": "submit"
      },
      "actions": {
        "submit": {
          "type": "chain",
          "actions": [
            {
              "type": "analytics",
              "event": "purchase_completed",
              "properties": {
                "product": "65\" Ultra HD TV",
                "value": 1299
              }
            },
            {
              "type": "navigate",
              "url": "/success"
            }
          ]
        }
      }
    }
  ]
}