{
  "sections": [
    {
      "id": "top-wrapper",
      "component": "Wrapper",
      "props": {
        "tag": "header",
        "className": "bg-primary text-white p-4"
      },
      "lifetime": {
        "onMount": [
          {
            "type": "log",
            "message": "Top wrapper mounted!"
          }
        ]
      },
      "sections": [
        {
          "component": "Navigation",
          "props": {
            "logo": {
              "text": "Lifecycle Demo"
            },
            "menuItems": [
              {
                "label": "Features",
                "action": {
                  "type": "navigate",
                  "url": "#features"
                }
              },
              {
                "label": "About",
                "action": {
                  "type": "navigate",
                  "url": "#about"
                }
              }
            ]
          }
        }
      ]
    },
    {
      "id": "features",
      "component": "Hero",
      "props": {
        "title": "Nested Wrappers & LifeCycle",
        "subtitle": "Testing the new engine capabilities",
        "primaryButton": {
          "label": "Try it now",
          "onClick": {
            "type": "navigate",
            "url": "success"
          }
        }
      },
      "lifetime": {
        "beforeMount": {
          "type": "setState",
          "key": "isTesting",
          "value": true
        },
        "onMount": [
          {
            "type": "log",
            "message": "Hero section ready!"
          },
          {
            "type": "analytics",
            "event": "section_view",
            "properties": {
              "name": "hero"
            }
          }
        ]
      }
    },
    {
      "id": "about",
      "component": "Wrapper",
      "props": {
        "tag": "section",
        "className": "bg-white p-8 grid grid-cols-2 gap-4"
      },
      "sections": [
        {
          "component": "Wrapper",
          "props": {
            "className": "col-span-1 p-4 border"
          },
          "sections": [
            {
              "component": "Confirmation",
              "props": {
                "title": "Left Column",
                "message": "This is a nested wrapper."
              }
            }
          ]
        },
        {
          "component": "Wrapper",
          "props": {
            "className": "col-span-1 p-4 border"
          },
          "sections": [
            {
              "component": "Confirmation",
              "props": {
                "title": "Right Column",
                "message": "This is another nested wrapper."
              }
            }
          ]
        }
      ]
    },
    {
      "id": "footer-wrapper",
      "component": "Wrapper",
      "props": {
        "tag": "footer",
        "className": "bg-secondary text-white p-8 text-center"
      },
      "sections": [
        {
          "component": "Footer",
          "props": {
            "logo": { "text": "Lifecycle Demo" },
            "copyright": "Â© 2026 Lifecycle Demo",
            "links": [
              { "label": "Facebook", "href": "https://facebook.com" },
              { "label": "Twitter", "href": "https://twitter.com" }
            ]
          },
          "lifetime": {
            "onUnmount": {
              "type": "log",
              "message": "Footer area unmounted (goodbye!)"
            }
          }
        }
      ]
    }
  ]
}
