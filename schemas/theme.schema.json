{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Landing Page Theme Configuration",
  "description": "Defines the visual theme for a landing page, including colors, fonts, spacing, and border radius",
  "type": "object",
  "properties": {
    "colors": {
      "type": "object",
      "description": "Color palette for the landing page (all color values are optional)",
      "additionalProperties": {
        "type": "string",
        "description": "Color value in hex, rgb, or named color format"
      },
      "examples": [
        {
          "primary": "#007bff",
          "secondary": "#6c757d",
          "danger": "#dc3545",
          "success": "#28a745"
        }
      ]
    },
    "fonts": {
      "type": "object",
      "description": "Typography settings (all font values are optional)",
      "additionalProperties": {
        "type": "string",
        "description": "Font family or font import definition"
      },
      "examples": [
        {
          "heading": "Arial, sans-serif",
          "body": "Helvetica, Arial, sans-serif"
        }
      ]
    },
    "radius": {
      "type": "object",
      "description": "Border radius values for consistent styling",
      "additionalProperties": {
        "type": "string",
        "description": "Border radius value (e.g., '4px', '8px')"
      },
      "examples": [
        {
          "small": "2px",
          "medium": "4px",
          "large": "8px"
        }
      ]
    },
    "spacing": {
      "type": "object",
      "description": "Spacing/padding values for consistent layout",
      "additionalProperties": {
        "type": "string",
        "description": "Spacing value (e.g., '4px', '8px', '1rem')"
      },
      "examples": [
        {
          "xs": "4px",
          "sm": "8px",
          "md": "16px",
          "lg": "32px"
        }
      ]
    }
  },
  "additionalProperties": false
}